<div class="review">
  <span title="<%=pluralize(review.rating, 'star')%> out of 5">
    <%= render :partial => "reviews/stars", :locals => {:stars => review.rating} %>
  </span>
  &nbsp; <span class="title"><%=h review.title%> </span>
  <br/>
  <span class="attribution"><%= t(:review_by) %> <strong><%=h review.name%></strong> <%= t(:review_from) %> <strong><%=h review.location%></strong> <%= t(:review_on) %> <strong><%=review.created_at.strftime("%d/%m/%Y") %></strong></span>
  <p>
  <%=h review.review%>
  </p>
</div>
